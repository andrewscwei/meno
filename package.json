{
  "name": "meno",
  "version": "0.1.0",
  "description": "An experimental JavaScript UI library",
  "main": "dist/meno.js",
  "homepage": "http://andrewscwei.github.io/meno",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dist lib",
    "build": "npm run clean && npm run build:lib && npm run build:dev && npm run build:prod",
    "build:lib": "mkdirp lib && ncp src lib",
    "build:dev": "NODE_ENV=development webpack --colors --profile --config ./config/build.conf.js --display-error-details",
    "build:prod": "NODE_ENV=production webpack --colors --profile --config ./config/build.conf.js --display-error-details",
    "build:analyze": "USE_ANALYZER=true npm run build:prod",
    "example:dev": "NODE_ENV=development webpack-dev-server --progress --inline --hot --config config/example.conf.js --content-base example/public --port 8080",
    "example:prod": "npm run build && NODE_ENV=production webpack-dev-server --progress --inline --hot --config config/example.conf.js --content-base example/public --port 8080"
  },
  "author": "Andrew Wei <andrewscwei@gmail.com>",
  "files": [
    "dist",
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/andrewscwei/meno.git"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "chalk": "^2.1.0",
    "compression-webpack-plugin": "^1.0.0",
    "css-loader": "^0.28.7",
    "html-webpack-harddisk-plugin": "^0.1.0",
    "html-webpack-plugin": "^2.30.1",
    "minuet": "^0.23.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-sass": "^4.5.3",
    "pug": "^2.0.0-rc.4",
    "pug-loader": "^2.3.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "strip-loader": "^0.1.2",
    "style-loader": "^0.18.2",
    "virtual-dom": "^2.1.1",
    "webcomponents.js": "^0.7.24",
    "webpack": "^3.5.6",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "^2.7.1"
  }
}
