template
  div(is='todo-entry' :ref='entry')
  .categories
    button(class=filter === 'all' ? 'active' : '', :ref='button-all')= `All (${total()})`
    button(class=filter === 'active' ? 'active' : '', :ref='button-active')= `Active (${totalActive()})`
    button(class=filter === 'completed' ? 'active' : '', :ref='button-completed')= `Completed (${totalCompleted()})`
  .list
    - for (var i = 0; i < filteredItems().length; i++)
      .item(class=filteredItems()[i].completed ? 'completed' : '', is='todo-item', :ref='item', :completed=filteredItems()[i].completed, :text=filteredItems()[i].text)